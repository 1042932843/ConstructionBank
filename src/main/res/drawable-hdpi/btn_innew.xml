<?xml version="1.0" encoding="utf-8"?>
<!-- view的各种状态(正常无焦点,焦点,onclick按下、放开等等) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中未up时 -->
    <item android:state_pressed="true"><shape>
            <stroke android:width="1dp" android:color="@android:color/white" />
            <!--
	        	按钮四个圆角
	        	radius:半径
            -->
            <corners android:bottomLeftRadius="8px" android:bottomRightRadius="8px" android:topLeftRadius="8px" android:topRightRadius="8px" />

                    <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="8dp" android:left="30dp" android:right="30dp" android:top="8dp" />
        </shape></item>

    <!-- 焦点 -->
    <item android:state_focused="true"><shape>
           <stroke android:width="1dp" android:color="@android:color/white" />
            <!--
	        	按钮四个圆角
	        	radius:半径
            -->
            <corners android:bottomLeftRadius="8px" android:bottomRightRadius="8px" android:topLeftRadius="8px" android:topRightRadius="8px" />

                    <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="8dp" android:left="30dp" android:right="30dp" android:top="8dp" />
        </shape></item>

    <!-- 无焦点 -->
    <item><shape>
           <stroke android:width="1dp" android:color="@android:color/white" />
            <!--
	        	按钮四个圆角
	        	radius:半径
            -->
            <corners android:bottomLeftRadius="8px" android:bottomRightRadius="8px" android:topLeftRadius="8px" android:topRightRadius="8px" />

            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="8dp" android:left="30dp" android:right="30dp" android:top="8dp" />
        </shape></item>

</selector>