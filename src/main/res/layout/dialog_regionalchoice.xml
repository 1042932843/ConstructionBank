<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    android:padding="@dimen/_12dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:text="商铺地址"
        android:gravity="center"
        android:textSize="@dimen/textsize18sp"

        />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_marginTop="@dimen/_12dp"
        android:id="@+id/spinner1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/area"
        android:spinnerMode="dialog"

        />

    <nbsix.com.constructionbank.Design.keyEditText.KeyEditText
        android:id="@+id/edit_where"
        android:textColorHint="@color/gray_20"
        android:textColor="@color/colorPrimary"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_36dp"
        android:hint="@string/hint7"
        android:textCursorDrawable="@drawable/edittext_cursor"
        android:background="@drawable/text_background_edit"
        android:drawablePadding="@dimen/padding_half"
        android:paddingLeft="@dimen/padding_half"
        android:textSize="@dimen/textsize14sp"/>

    <RelativeLayout
        android:layout_marginTop="@dimen/_16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.bilibili.magicasakura.widgets.TintButton
            android:layout_centerInParent="true"
            android:id="@+id/makesure_btn"
            android:layout_width="@dimen/_96dp"
            android:layout_height="@dimen/_32dp"
            android:background="@drawable/selector_login"
            android:enabled="false"
            android:gravity="center"
            android:text="@string/makesure"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_small" />
    </RelativeLayout>


</LinearLayout>
